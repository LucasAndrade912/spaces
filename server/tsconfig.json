{
	"extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		}
  },
	"include": ["src"],
	"exclude": ["node_modules"]
}
